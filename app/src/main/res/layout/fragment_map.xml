<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uniquindio.mueveteuq.fragments.mapZone.MapFragment">

    <TextView
        android:layout_margin="16dp"
        android:id="@+id/map_postition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localizacion: "/>


    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/pasosTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="140sp"
        android:text="Pasos"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/numPasostv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_gravity="bottom"
        android:textColor="#000000"
        android:layout_marginBottom="110sp"
        android:layout_marginLeft="50sp"
        android:textSize="20sp" />



    <TextView
        android:id="@+id/textoDistancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="150sp"
        android:layout_marginBottom="140sp"
        android:text="Distancia"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/numDistancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 m"
        android:layout_gravity="bottom"
        android:textColor="#000000"
        android:layout_marginBottom="110sp"
        android:layout_marginLeft="170sp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textoCalorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="90sp"
        android:layout_marginBottom="70sp"
        android:text="Calorias"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/numCalorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 kc"
        android:layout_gravity="bottom"
        android:textColor="#000000"
        android:layout_marginBottom="40sp"
        android:layout_marginLeft="110sp"
        android:textSize="20sp" />


    <com.getbase.floatingactionbutton.FloatingActionsMenu

        android:id="@+id/grupoFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:fab_labelStyle="@style/etiqueta"
        app:fab_addButtonColorNormal="@color/verde"
        app:fab_addButtonColorPressed="@color/colorAccent">

        <com.getbase.floatingactionbutton.FloatingActionButton

            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@android:drawable/ic_menu_compass"
            android:layout_margin="16dp"
            app:fab_size="normal"
            app:fab_colorNormal="@color/verde"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_title="Centrar ubicacion"/>


        <com.getbase.floatingactionbutton.FloatingActionButton

            android:id="@+id/fabIniciarRecorrido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@android:drawable/ic_media_play"
            android:layout_margin="16dp"
            app:fab_size="normal"
            app:fab_colorNormal="@color/verde"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_title="Iniciar"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabTerminarRecorrido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:fab_size="normal"
            app:fab_icon="@drawable/done"
            app:fab_colorNormal="@color/verde"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_title="Terminar"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAbandonarRecorrido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:fab_size="normal"
            app:fab_icon="@android:drawable/ic_menu_close_clear_cancel"
            app:fab_colorNormal="@color/rojo"
            android:visibility="gone"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_title="Abandonar"/>


    </com.getbase.floatingactionbutton.FloatingActionsMenu>



</FrameLayout>

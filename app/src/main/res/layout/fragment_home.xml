<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.uniquindio.mueveteuq.fragments.mainZone.HomeFragment">


    <ImageView
        android:id="@+id/tenis"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="581dp"
        android:background="@drawable/pexels_photo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="581dp"
        android:background="#d8000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:src="@drawable/titulogrande_sinfondo" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.007">

    </LinearLayout>

    <Button
        android:id="@+id/btn_cerrar_sesion"
        android:layout_width="174dp"
        android:layout_height="54dp"
        android:background="@drawable/btn_redondeado_white"
        android:padding="10dp"
        android:text="Cerrar sesion"
        android:textColor="@color/negro"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="511dp" />

    <Button
        android:id="@+id/btn_ir_mapa"
        android:layout_width="182dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_redondeado_registro"
        android:padding="10dp"
        android:text="Ir al mapa"
        android:textColor="@color/blanco"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="619dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-30dp">


        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="190dp"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="100dp"
                android:layout_marginStart="130dp"
                android:background="@drawable/relieve_color"
                android:src="@drawable/icon_ejercicio" />

            <TextView
                android:id="@+id/tv_nombre_usuario"
                android:layout_width="323dp"
                android:layout_height="49dp"
                android:layout_marginTop="50dp"
                android:text="Nombre de usuario"
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                android:textColor="@color/negro"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="257dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
